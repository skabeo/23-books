<div class='sign-up-details'>
  <%= link_to categories_path do %>
    <%= image_tag 'back.png', class: 'back' %>
  <% end %>
  <h2 class='center-text'>Add a category</a>
</div>

<%= form_with(model: @category, local: true) do |form| %>
  <div class='form-container'>
    <div class='field'>
      <%= form.label :name %>
      <%= form.text_field :name, autofocus: true, placeholder: 'Enter category name here...' %>
    </div>

    <div class='field'>
      <%= form.label :icon %>
      <%= form.text_field :icon, placeholder: 'Enter icon link here...' %>
    </div>

    <div class="actions">
      <%= form.submit "Add", class: 'in-out' %>
    </div>
  </div>
<% end %>